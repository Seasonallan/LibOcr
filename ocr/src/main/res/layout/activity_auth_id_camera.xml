<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">


    <RelativeLayout
        android:id="@+id/un_use"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/shutter_effect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="@android:color/white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/turn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="false"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:src="@drawable/ic_gray_background"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/capture_mode_change"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="false"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_gray_background"
            android:clickable="true"
            android:padding="5dp"
            android:src="@drawable/mode_change"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/capture_flashlight"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="false"
            android:layout_centerVertical="false"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_gray_background"
            android:clickable="true"

            android:padding="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/screen_highlight_close"
            android:visibility="invisible" />
    </RelativeLayout>

    <com.turui.android.cameraview.CameraView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:keepScreenOn="false"
        app:tr_alignmentColor="#FF00FF00"
        app:tr_alignmentWidth="3dp"
        app:tr_autoFocus="true"
        app:tr_cameraAspectRatio="16:9"
        app:tr_cornerColor="#FFFFFF00"
        app:tr_cornerLength="25dp"
        app:tr_cornerSize="4dp"
        app:tr_facing="back"
        app:tr_flash="off"
        app:tr_maskColor="#AAAAAAAA"
        app:tr_maximumPreviewWidth="2500"
        app:tr_maximumWidth="2500"
        app:tr_rectCenterXPercent="50"
        app:tr_rectCenterYPercent="45"
        app:tr_rectLandscapeHeightPercentByWidth="63"
        app:tr_rectLandscapeWidthPercent="65"
        app:tr_rectPortraitHeightPercentByWidth="63"
        app:tr_rectPortraitWidthPercent="85"
        app:tr_scanLineColor="#EE55FF55"
        app:tr_showScanLine="false" />


    <TextView
        android:id="@+id/camera_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/auth_top_tip"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <FrameLayout
        android:id="@+id/camera_fl_cover"
        android:layout_width="480dp"
        android:layout_height="270dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_line_white6"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/camera_iv_positive"
            android:layout_width="126dp"
            android:layout_height="106dp"
            android:layout_gravity="right|center"
            android:layout_margin="26dp"
            android:rotation="-90"
            android:src="@mipmap/pic_camera_man" />

        <ImageView
            android:id="@+id/camera_iv_cover_back"
            android:layout_width="95dp"
            android:layout_height="93dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="21dp"
            android:rotation="-90"
            android:src="@mipmap/icon_auth_nation" />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/camera_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="26dp">


    </LinearLayout>

    <ImageView
        android:id="@+id/shutter"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="28dp"
        android:clickable="true"
        android:src="@mipmap/icon_camera_take" />


    <ImageView
        android:id="@+id/capture_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_margin="46dp"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/icon_camera_back" />

</RelativeLayout>
