<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CameraView">
        <attr name="tr_maximumWidth" format="integer" />
        <attr name="tr_maximumPreviewWidth" format="integer" />
        <attr name="tr_useHighResPicture" format="boolean" />
        <attr name="tr_facing" format="enum">

            <enum name="back" value="0" />

            <enum name="front" value="1" />
        </attr>
        <attr name="tr_cameraAspectRatio" format="string" />
        <attr name="tr_autoFocus" format="boolean" />
        <attr name="tr_flash" format="enum">

            <enum name="off" value="0" />

            <enum name="on" value="1" />

            <enum name="torch" value="2" />

            <enum name="auto" value="3" />

            <enum name="redEye" value="4" />
        </attr>
        <attr name="tr_enableZoom" format="boolean" />
        <attr name="tr_rectCenterXPercent" format="integer" />
        <attr name="tr_rectCenterYPercent" format="integer" />
        <attr name="tr_rectPortraitWidthPercent" format="integer" />
        <attr name="tr_rectPortraitHeightPercentByWidth" format="integer" />
        <attr name="tr_rectLandscapeWidthPercent" format="integer" />
        <attr name="tr_rectLandscapeHeightPercentByWidth" format="integer" />
        <attr name="tr_alignmentWidth" format="dimension|reference" />
        <attr name="tr_alignmentColor" format="color|reference" />
        <attr name="tr_cornerSize" format="dimension|reference" />
        <attr name="tr_cornerLength" format="dimension|reference" />
        <attr name="tr_cornerColor" format="color|reference" />
        <attr name="tr_maskColor" format="color|reference" />
        <attr name="tr_showScanLine" format="boolean" />
        <attr name="tr_scanLineColor" format="color|reference" />
    </declare-styleable>

    <style name="AppThemeFullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowFullscreen">true</item>   
        <item name="android:windowIsTranslucent">false</item> 
    </style>


    <style name="Widget.CameraView" parent="android:Widget">
        <item name="android:adjustViewBounds">false</item>
        <item name="tr_facing">back</item>
        <item name="tr_cameraAspectRatio">4:3</item>
        <item name="tr_autoFocus">true</item>
        <item name="tr_flash">auto</item>
    </style>

    <style name="dialog_tip" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>

    </style>
</resources>